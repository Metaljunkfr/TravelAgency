{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block main %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    

    {{form_start(userForm)}}
    
    {{form_widget(userForm.username)}}

  
    {{form_widget(userForm.email)}}

   
    {{form_widget(userForm.password.first)}}

    
    {{form_widget(userForm.password.second)}}

    <button class="cancel" id="cancel" type="reset">Annuler</button>
    <button class="validate" type="submit">Register</button>

    {{form_end(userForm)}}

</div>
{% endblock %}
